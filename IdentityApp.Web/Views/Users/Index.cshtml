@model IEnumerable<AppUser>
@{
	ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-controller="Account" asp-action="Create">Kullanıcı Oluştur</a>
<br />
<hr />
<table class="table table-sm table-bordered">
	<thead>
		<tr>
			<th>ID</th>
			<th>AD SOYAD</th>
			<th>MAİL</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr><td colspan="4" class="text-center">Kullanıcı Yok</td></tr>
		}
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.Id</td>
				<td>@user.FullName</td>
				<td>@user.Email</td>
				<td>
					<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Güncelle</a>
					<form asp-action="Delete" method="post" style="display:inline-block">
						<input type="hidden" value="@user.Id" name="id" />
						<button class="btn btn-danger btn-sm">Sil</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
