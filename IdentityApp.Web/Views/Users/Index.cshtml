@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-action="Create">Kullanıcı Oluştur</a>
<br />
<hr />
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>AD SOYAD</th>
            <th>MAİL</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id ="@user.Id" class="btn btn-primary btn-sm">Güncelle</a>
                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
