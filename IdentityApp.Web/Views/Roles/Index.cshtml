@model IEnumerable<AppRole>
@{
	ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-action="Create">Rol Oluştur</a>
<hr />
<table class="table table-sm table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Rol Adı</th>
			<th>Kullanıcılar</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Count() == 0)
		{
			<tr><td colspan="4" class="text-center">Rol Yok</td></tr>
		}
		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Id</td>
				<td>@role.Name</td>
				<td asp-role-users="@role.Id"></td>
				<td>
					<form method="post">
						<a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id = "@role.Id">Güncelle</a>
						<button type="submit" class="btn btn-sm btn-danger">Sil</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>